<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFBE3D"
    tools:context=".IsmunActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePlayPause2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/playi">

        </ImageView>

        <TextView
            android:id="@+id/textCurrentTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#6D3D16"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <SeekBar
            android:id="@+id/playerSeekBar2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

        </SeekBar>

        <TextView
            android:id="@+id/textTotalDuration2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/zero"
            android:textColor="#6D3D16"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/ismun"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>