<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HizbuActivity"
    android:orientation="vertical"
    android:background="#F8E6A6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePlayPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/playh">

        </ImageView>

        <TextView
            android:id="@+id/textCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#C20505"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <SeekBar
            android:id="@+id/playerSeekBar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">

        </SeekBar>

        <TextView
            android:id="@+id/textTotalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#C20505"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="350dp"
        android:layout_height="515dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/hiz1"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="10dp"></ImageView>

            <ImageView
                android:id="@+id/hiz2"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz3"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz4"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz5"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz6"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz7"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz8"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz9"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz10"
                android:layout_width="match_parent"
                android:layout_height="500dp"></ImageView>

            <ImageView
                android:id="@+id/hiz11"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginBottom="10dp"></ImageView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>